<p id="notice"><%= notice %></p>

<h1>Listing Notes</h1>

<% @notes.in_groups_of(3) do |group| %>
  <div class="row">
    <% group.compact.each do |note| %>
      <div class="col-md-4">
        <%= image_tag note.picture_url, class: 'img-thumbnail' if note.picture.present?%>
        <h4><%= link_to note.name, note %></h4>
        <%= note.description %>
      </div>
     <% end %>
  </div>
<% end %>
